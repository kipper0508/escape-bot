generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String         @id
  type        UserType
  createdAt   DateTime       @default(now())
  createdEvents Event[]      @relation("CreatedEvents")
  events       UserOnEvent[]
}

model Event {
  id           Int           @id @default(autoincrement())
  title        String
  description  String?
  location     String
  eventTime    DateTime
  remindBefore Int
  reminded     Boolean  @default(false)  // 標記是否已提醒
  createdAt    DateTime      @default(now())
  createdById  String
  createByType UserType      // ← 新增：直接存 user/group
  createdBy    User          @relation("CreatedEvents", fields: [createdById], references: [id])
  participants UserOnEvent[]
}

model UserOnEvent {
  userId   String
  eventId  Int
  joinedAt DateTime @default(now())

  user   User @relation(fields: [userId], references: [id])
  event  Event @relation(fields: [eventId], references: [id])

  @@id([userId, eventId])
}

enum UserType {
  user
  group
}
